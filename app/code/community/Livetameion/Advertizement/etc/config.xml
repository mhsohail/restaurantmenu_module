    <global>
		<blocks>
            <advertizement>
                <class>Livetameion_Advertizement_Block</class>
            </advertizement>            
        </blocks>
       <models>
            <restaurant>
                <class>Livetameion_Advertizement_Model</class>
                <resourceModel>advertizement_resource</resourceModel>
            </restaurant>
			
            <advertizement_resource>
                <class>Livetameion_Advertizement_Model_Resource</class>                               
                <entities>                    
                    <advertizement>
                        <table>restaurant_menu</table>
                    </advertizement>
					<item>
                        <table>restaurant_menu_item</table>
                    </item>
                </entities>                
            </advertizement_resource>
          <!-- <customer_resource>
                <rewrite>
                    <customer>Livetameion_Advertizement_Model_Resource_Customer</customer>
                </rewrite>
            </customer_resource> -->
            <sales>
                <rewrite>
                    <!--<order>Livetameion_Advertizement_Model_Order</order>-->
                </rewrite>
            </sales>
        </models>
      <resources>
            <advertizement_setup>
                <setup>
                    <module>Livetameion_Advertizement</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
            </advertizement_setup>
        </resources>
        <helpers>
            <advertizement>
                <class>Livetameion_Advertizement_Helper</class>
            </advertizement>
        </helpers>
    </global>
    <frontend>
        <routers>
            <livetameion_advertizement>
                <use>standard</use>
                <args>
                    <module>Livetameion_Advertizement</module>
                    <frontName>restaurant</frontName>
                </args>
            </livetameion_advertizement>
        </routers>
        <layout>
            <updates>
                <advertizement>
                    <file>livetameion_advertizement.xml</file>
                </advertizement>
            </updates>
        </layout>
    </frontend>
